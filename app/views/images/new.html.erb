<%= form_with scope: :image, url: images_path, local: true do |form| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@image.errors.count, "error") %> prohibited
        this image from being saved:
      </h2>
      <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :url %><br>
    <%= form.text_field :url %><br>
    <%= form.label "Tags(comma separated)" %><br>
    <%= form.text_field :tag_list %><br>
  </div>
  <div>
    <%= form.submit %>
  </div>
<%end%>

